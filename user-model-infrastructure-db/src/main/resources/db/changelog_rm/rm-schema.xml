<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Tables -->
    <changeSet id="create-sequence-car" author="uberdev">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="user_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="user_id_seq" incrementBy="50"/>
    </changeSet>

    <changeSet id="create-table-cars" author="uberdev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>

        <!-- ТАБЛИЦА USERS -->
        <createTable tableName="users">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="email" type="VARCHAR"/>
            <column name="password" type="VARCHAR"/>
            <column name="is_expired" type="BOOLEAN"/>
            <column name="activation_code" type="VARCHAR"/>
            <column name="is_active" type="BOOLEAN"/>
        </createTable>
    </changeSet>

    <changeSet id="create-sequence-role_id" author="uberdev">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="role_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="role_id_seq" incrementBy="50"/>
    </changeSet>

    <changeSet id="create-table-roles" author="uberdev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="roles"/>
            </not>
        </preConditions>

        <!-- ТАБЛИЦА ROLES -->
        <createTable tableName="roles">
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="role_type" type="VARCHAR"/>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet author="uberdev" id="create-foreign-key-user_id">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="roles"
                                 constraintName="fk_user_id"
                                 referencedColumnNames="user_id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>